            </div>
            <div class="col-md-6">
                <p>@Html.DisplayFor(m => item.Name)</p>
                <p>@Html.DisplayFor(m => item.Username)</p>
                <p>@Html.DisplayFor(m => item.Password)</p>
            </div>
            <hr class="border-danger" style="width: 100%;" />
        }
    </div>
</div>