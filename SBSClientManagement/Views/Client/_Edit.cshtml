@model SBSClientManagement.Models.ViewModel.EditClientViewModel


<div class="row">
    <div class="col-md-12">
        <form id="editClientForm" onsubmit="return validateForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="name" required />
                <span asp-validation-for="Name" class="text-danger" id="error"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Create" class="btn btn-primary form-control" onclick="return validateForm()" id="btnSubmit" />
            </div>
        </form>
    </div>
</div>

<script>
    let error = document.getElementById("error");
    function validateForm() {
        let name = document.getElementById("name").value;
        error.value = "";
        if (name.length > 0) {
            sendData();
        } else {
            error.innerHTML = "Input Client Name";
            return false;
        }
    }
    let button = document.getElementById("btnSubmit");
    $(button).click(function (e) {
        let name = document.getElementById("name").value;
        error.value = "";
        if (name.length > 0) {
            sendData();
        } else {
            error.innerHTML = "Input Client Name";
            return false;
        }

    });
    function sendData() {
        var valdata = $("#editClientForm").serialize();
        console.log(valdata);
        $.ajax({
            url: "/Client/Create",
            type: "POST",
            dataType: 'json',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: valdata,
            success: function (result) {
                if (result.statusCode == 200) {
                    location.reload();
                } else {
                    error.innerHTML = "Error Saving" + result.value;
                    return false;
                }
            },
            error: function (result) {
                error.innerHTML = "Error Saving" + result.value;
                return false;
            }
        });
    }
</script>